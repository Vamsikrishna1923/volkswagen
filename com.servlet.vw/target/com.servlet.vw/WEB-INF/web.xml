<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    id="WebApp_ID" version="3.1">
    
  <display-name>VolkswagenMotors</display-name>
  <welcome-file-list>
        <welcome-file>Index.html</welcome-file>
        <welcome-file>Addproduct.html</welcome-file>
        <welcome-file>Success.html</welcome-file>
        <welcome-file>Failure.html</welcome-file>
        <welcome-file>fetch.html</welcome-file>
        <welcome-file>Fetch.jsp</welcome-file>
        
    </welcome-file-list>
  <servlet>
        <servlet-name>CreatereadServlet</servlet-name>
        <servlet-class>com.servlet.controller.CreatereadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreatereadServlet</servlet-name>
        <url-pattern>/CreatereadServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VwData</servlet-name>
        <servlet-class>com.servlet.controller.VwData</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VwData</servlet-name>
        <url-pattern>/VwData</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>VwServlet</servlet-name>
        <servlet-class>com.servlet.controller.VwServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VwServlet</servlet-name>
        <url-pattern>/VwServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FetchServlet</servlet-name>
        <servlet-class>com.servlet.controller.FetchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FetchServlet</servlet-name>
        <url-pattern>/FetchServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUpdateServlet</servlet-name>
        <servlet-class>com.servlet.controller.DeleteUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteUpdateServlet</servlet-name>
        <url-pattern>/DeleteUpdateServlet</url-pattern>
    </servlet-mapping>
</web-app>
